<% layout('layouts/boilerplate') %> 
<h1 class="offset-md-4 my-3"> Prueba <%= test.serial %> </h1>

<div class="container my-3 rutas-table">
    <div class="row rutas-head">
        <div class="col-2">Fecha</div>
        <div class="col-2">Chofer</div>
        <div class="col-2">Autorizó a Realizar Prueba</div>
        <div class="col-2">Resultado</div>
        <div class="col-2">Observaciones</div>
        <div class="col-2">Nombre de Quien Realiza la Prueba</div>
    </div>
    <% test.date.forEach((item, index) => {%>
        <div class="row rutas-row">
            <div class="col-2"><%= item.toLocaleDateString() %> </div>
            <div class="col-2"><%= test.driver[index].name %> </div>
            <div class="col-2"><%= test.agree[index] === true ? 'Sí' : 'No' %> </div>
            <div class="col-2"><%= test.result[index] %> </div>
            <div class="col-2"><%= test.comments[index] %> </div>
            <div class="col-2"><%= test.performedBy[index] %> </div>
        </div>
    <% }) %> 
</div>