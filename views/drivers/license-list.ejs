<% layout('layouts/boilerplate') %> 
<h2 class="m-3" id="data">Listado de Licencias Próximas a Expirar.</h2>

<div class="container my-3 rutas-table" id="dataTwo">
    <div class="row rutas-head">
        <div class="col-3">
            Nombre
        </div>
        <div class="col-3">
            Licencia
        </div>
        <div class="col-3">
            Días a Vencer
        </div>
        <div class="col-3">
            Teléfono
        </div>
    </div>
    <% for (license of licenses) {%>
        <% if (license.expires < 15) {%>
            <div class="row rutas-row">
                <div class="col-3">
                    <%= license.driver.name %> 
                </div>
                <div class="col-3">
                    <%= license.number %> 
                </div>
                <div class="col-3 ">
                    <%= license.expires %> 
                </div>
                <div class="col-3">
                    <%= license.driver.phone %> 
                </div>
            </div>
        <% } %> 
    <% } %>  
</div>
<div class="container">
    <button class="btn btn-info my-3" id="downloadBtn">Descarga PDF</button>
 </div>
<span hidden id="currentUser"><%= currentUser.firstName %> <%= currentUser.lastName %></span>
<span hidden id="currentDate"><%= new Date().toLocaleDateString() %></span>
<span hidden id="currentOrder"><%= license.number %>_<%= new Date().toLocaleDateString() %></span>
<script src="../../JavaScript/jspdf.min.js"></script>
<script src="../../JavaScript/html2pdf.bundle.min.js"></script>
<script src="../../JavaScript/licensePDF.js"></script>