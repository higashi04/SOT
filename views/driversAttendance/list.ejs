<% layout('layouts/boilerplate') %>
<h1 class="offset-md-4 my-5">Mes de <%= list.mes %> </h1>
<h4>Fecha de Creaci√≥n: <%= list.date.toLocaleDateString() %> </h4>
<form action="/driverAttendance/<%= list._id %>?_method=PUT" method="post">
    <div class="container rutas-table my-5">
        <div class="row rutas-head">
            <div class="col">Unidad</div>
            <div class="col">Grupo</div>
            <div class="col">Nombre</div>
            <div class="col">Tipo de Unidad</div>
            <div class="col">Coordinador</div>
            <div class="col">Empresa</div>
            <div class="col">Asistencia</div>
            <div class="col">Faltas</div>
            <div class="col">Retardos</div>
            <div class="col">Faltas Justificadas</div>
        </div>
        <% for(driver of drivers) {%>
            <% if(driver.fueDadoDeBaja !== true) {%>
                <div class="row rutas-row">
                    <div class="col">
                        <%= driver.bus.unidad %> 
                    </div>
                    <div class="col">
                        V2 
                    </div>
                    <div class="col">
                        <%= driver.name %> 
                    </div>
                    <div class="col">
                        <%= driver.bus.tipo %> 
                    </div>
                    <div class="col">
                        <%= driver.coordinator %> 
                    </div>
                    <div class="col">
                        <%= driver.company %> 
                    </div>
                    <div class="col form-floating">
                        <input type="number" class="form-control" name="asistencias">
                        <label for="asistencias">Asistencia: </label>
                    </div>
                    <div class="col form-floating">
                        <input type="number" class="form-control" name="faltas">
                        <label for="faltas">Faltas: </label>
                    </div>
                    <div class="col form-floating">
                        <input type="number" class="form-control" name="retardos">
                        <label for="retardos">Retardos: </label>
                    </div>
                    <div class="col form-floating">
                        <input type="number" class="form-control" name="justificado">
                        <label for="justificado">FJ: </label>
                    </div>
                </div>
            <% } %>  
        <% } %>
    </div>
    <div class="row my-5">
        <div class="col-4"></div>
        <div class="col-4">
            <button class="btn btn-success">Guardar</button>
        </div>
        <div class="col-4"></div>
    </div>
</form>