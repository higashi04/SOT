<% layout('layouts/boilerplate') %> 
<h1 class="my-3 offset-md-2"> Registro de No Recontratable </h1>

<div class="container">
    <div class="row">
        <form action ="/reception/irrecontratables/new" method="POST" novalidate>
            <div class="form-floating col-6 pb-2">
                <input type="text" class="form-control form-control-lg" name="name" id="name" placeholder="Nombre(s):" required>
                <label for="name" class="form-label">Nombre(s): </label>
            </div>
            <div class="form-floating col-6 pb-2">
                <input type="date" class="form-control form-control-lg" name="upDate" id="upDate"  required>
                <label for="upDate" class="form-label">Fecha de Ingreso: </label>
            </div> 
            <div class="form-floating col-6 pb-2">
                <input type="date" class="form-control form-control-lg" name="downDate" id="downDate"  required>
                <label for="downDate" class="form-label">Fecha de Baja: </label>
            </div>
            <div class="form-floating col-6 pb-2">
                <input type="text" class="form-control form-control-lg" name="company" id="company" placeholder="Empresa: " required>
                <label for="company" class="form-label">Empresa:  </label>
            </div>
            <div class="form-floating col-6 pb-2">
                <textarea class="form-control" placeholder="Motivos: " id="reason" name="reason"></textarea>
                <label for="reason">Motivos: </label>
            </div> 
            <button class="btn btn-success m-3">Mandar</button>
          </form>
    </div>
</div>