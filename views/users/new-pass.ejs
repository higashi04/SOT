<% layout('layouts/boilerplate') %> 
<h2>Reseteo de contraseña</h2>
<div class="container">
    <form action="/reset/<%=token%>" method="post" novalidate>
        <div class="form-floating col-6 pb-2">
            <input type="password" class="form-control form-control-lg" name="password" id="floatingPassword" placeholder="Contraseña:" required>
            <label for="floatingPassword" class="form-label">Nueva contraseña: </label>
            <span class="pass-toggle">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-fill" id="eye-toggle" viewBox="0 0 16 16">
                <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z"/>
                <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8zm8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7z"/>
              </svg>
            </span>
          </div>
          <div class="form-floating col-6 pb-2">
            <input type="password" class="form-control form-control-lg" name="confirm" id="floatingPassword1" placeholder="Contraseña:" required>
            <label for="floatingPassword1" class="form-label">Confirma contraseña: </label>
            <span class="pass-toggle">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-fill" id="eye-toggleTwo" viewBox="0 0 16 16">
                <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z"/>
                <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8zm8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7z"/>
              </svg>
            </span>
          </div>
          <button class="btn btn-success">Mandar</button>
    </form>
</div>
<script src="../../JavaScript/passwordToggle.js"></script>