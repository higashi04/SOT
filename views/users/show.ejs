<% layout('layouts/boilerplate') %> 
<h1 class="offset-md-4 my-2">Perfil</h1>
<div class="container my-3">
    <div class="col-6"><span class="title">Usuario: </span><%=user.username%> </div>
    <div class="col-6"><span class="title">Nombre: </span><%= user.firstName %>  </div>
    <div class="col-6"><span class="title">Apellido: </span><%= user.lastName %>  </div>
    <div class="col-6"><span class="title">Email: </span><%= user.email %> </div>
    <div class="col-6"><span class="title">Puesto: </span><%= user.puesto %> </div>
    <% if(currentUser.isAdmin || user._id.equals(currentUser._id) ) {%>
    <a class="btn btn-primary my-3" href="/users/<%=user._id%>/edit">Editar</a></button>
    <% } %> 
    <% if(currentUser.isAdmin) {%> 
    <form action="/users/<%=user._id%>?_method=DELETE" method="POST">
        <button class="btn btn-danger my-3">
            Eliminar
        </button>
    </form>
    <% } %> 
</div>

<div class="container m-5">
    <div class="row">
        <div class="col-6">
            <h3>Mensajes:</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-2">
            
        </div>
        <div class="col-6"></div>
    </div>
</div>
