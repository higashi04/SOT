<% layout('layouts/boilerplate') %> 
<h1 class="offset-md-4 my-5">Editar Vacante <%= vacante.position %> </h1>

<div class="container m-5">
    <form action="/vacantes/edit/<%= vacante._id %>?_method=PUT" method="POST">
        <div class="row my-3">
            <div class="col-6 form-floating">
                <input type="number" class="form-control" id="ageStart" name="ageStart" placeholder="Edad Mínima" value="<%= vacante.ageStart %>" required>
                <label for="ageStart">Edad Mínima</label>
            </div>
            <div class="col-6 form-floating">
                <input type="number" class="form-control" id="ageEnd" name="ageEnd" placeholder="Edad Máxima" value="<%= vacante.ageEnd %>" required>
                <label for="ageEnd">Edad Máxima</label>
            </div>
        </div>
        <div class="row my-3">
            <div class="form-check col-4">
                <input class="form-check-input" type="radio" name="gender" id="gender1" value="Masculino" <% if(vacante.gender === 'Masculino') {%> checked <% } %>>
                <label class="form-check-label" for="gender1">
                  Masculino
                </label>
              </div>
              <div class="form-check col-4">
                <input class="form-check-input" type="radio" name="gender" id="gender2" value="Femenino" <% if(vacante.gender === 'Femenino') {%> checked <% } %>>
                <label class="form-check-label" for="gender2">
                  Femenino
                </label>
              </div>
              <div class="form-check col-4">
                <input class="form-check-input" type="radio" name="gender" id="gender3" value="Indistinto" <% if(vacante.gender === 'Indistinto') {%> checked <% } %> >
                <label class="form-check-label" for="gender3">
                  Indistinto
                </label>
              </div>
        </div>
        <div class="row my-3">
            <div class="form-floating pb-2">
                <textarea class="form-control" placeholder="Requisitos: " id="requirements" name="requirements"><%= vacante.requirements %></textarea>
                <label for="requirements">Requisitos: </label>
            </div> 
        </div>
        <div class="row my-3">
            <div class="form-check col-6">
                <input class="form-check-input" type="radio" name="covered" id="covered2" value="true" <% if(vacante.covered) {%> checked <% } %>>
                <label class="form-check-label" for="covered2">
                  Se cubrió vacante.
                </label>
              </div>
              <div class="form-check col-6">
                <input class="form-check-input" type="radio" name="covered" id="covered3" value="false" <% if(!vacante.covered) {%> checked <% } %> >
                <label class="form-check-label" for="covered3">
                  No se ha cubierto vacante.
                </label>
              </div>
        </div>
        <% if(!vacante.covered) {%> <button class="btn btn-warning">Editar Vacante</button> <% } %>  
    </form>
</div>